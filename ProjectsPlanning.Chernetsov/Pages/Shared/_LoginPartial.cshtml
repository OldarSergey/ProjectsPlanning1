@using Microsoft.AspNetCore.Identity;
@using ProjectsPlanning.Chernetsov.Entities;

@inject SignInManager<User> SignInManager
@inject UserManager<User> UserManager


<ul class="navbar-nav ml-auto">
    @if (SignInManager.IsSignedIn(User))
    {
        <li class="nav-item ml-auto">
            <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">
                @User.Identity.Name
            </a>
        </li>

        <li class="nav-item ml-auto">
            <form class="form-inline" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Page("/", new { area = "" })" asp-area="Identity" method="post">
                <button class="nav-link btn btn-link text-dark" type="submit">
                    Logout
                </button>
            </form>
        </li>

    }
    else
    {
        <li class="nav-item ml-auto">
            <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Register">Register</a>
        </li>

        <li class="nav-item ml-auto">
            <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Login">Login</a>
        </li>
    }
</ul>
