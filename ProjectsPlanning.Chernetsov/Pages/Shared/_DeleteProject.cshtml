@model int
<div class="modal-content">
    <div class="modal-header">
        <h4 class="modal-title" id="project-delete-modalLabel" style="font-size: 1.125rem;">
            Удаление проекта
        </h4>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="close"></button>
    </div>
    <div class="modal-body">
        <div class="p-2">
            <h5 class="mt-0">Вы уверены что хотите удалить данный проект?</h5>
        </div>
    </div>
    <div class="modal-footer">
        <form method="post"
              asp-page="Index"
              asp-page-handler="DeleteProject"
              asp-route-id="@Model">
            <button type="submit" class="btn-danger">Удалить</button>
        </form>

        <button type="button" class="btn-secondary" data-bs-dismiss="modal">Отмена</button>
    </div>
</div>


