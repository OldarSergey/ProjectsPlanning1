                <form method="post">
                    <div class="form-group mb-3">
                        <label class="col-sm-2 col-form-label">Название</label>
                        <input class="form-control" id="inputTitle" />
                        <span style="color:darkred"></span>
                    </div>
                    <div class="form-group mb-3">
                        <label class="col-sm-2 col-form-label">Описание</label>
                        <input class="form-control" id="inputTitle" />
                        <span style="color:darkred"></span>
                    </div>
                    <div class="form-group mb-3">
                        <label class="col-sm-2 col-form-label">Обязаности</label>
                        <input class="form-control" id="inputTitle" />
                        <span style="color:darkred"></span>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn-secondary" data-bs-dismiss="modal">Закрыть</button>
                <button type="submit" class="btn-success">Добавить</button>
            </div>
        </div>
    </div>
</div>
